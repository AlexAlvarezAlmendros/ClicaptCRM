{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "crons": [
    { "path": "/api/cron/trial-warnings", "schedule": "0 9 * * *" },
    { "path": "/api/cron/task-reminders", "schedule": "0 8 * * *" }
  ]
}
